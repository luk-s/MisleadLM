{
  "train_micro_batch_size_per_gpu": "auto",
  "gradient_accumulation_steps": 1,
  "fp16": {
    "enabled": "auto",
    "min_loss_scale": 1,
    "opt_level": "O2"
  },
  "zero_optimization": {
    "stage": 2,
    "contiguous_gradients": false,
    "overlap_comm": true,
    "reduce_scatter": true,
    "reduce_bucket_size": 5e7,
    "allgather_bucket_size": 5e7
  },
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": "auto",
      "betas": [
        0.9,
        0.95
      ],
      "eps": 1e-08
    }
  }
}